<h4>Locations</h4>
<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Location</th>
    <th>Job Status</th>
    <th>Job Message</th>
    <th>Job Updated</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @clients_integration_setting.locations_integration_settings.each do |locations_integration_settings| %>
      <tr>
        <td>
          <a title="Override Settings by Location" href="<%= edit_locations_integration_setting_path(locations_integration_settings.id) %>">
            Edit Settings
          </a>
        </td>
        <td>
          <%= locations_integration_settings.location.name %>
        </td>
        <td>
          <%= locations_integration_settings.current_job_state %>
        </td>
        <td>
          <%= locations_integration_settings.current_job_message %>
        </td>
        <td>
          <%= locations_integration_settings.current_job_updated_at %>
        </td>
        <td>
          <%= link_to('Logs', locations_integration_settings.current_job_logs_url) %>
        </td>
        <td>
          <%= link_to('Kickoff new job', job_starts_path(locations_integration_setting_id: locations_integration_settings.id), data: {confirm: "Are you sure you want to start a job for #{locations_integration_settings.location.name}?"}, method: :post, class: 'btn btn-primary') %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to('Add/Remove Locations', edit_clients_integration_setting_path(@clients_integration_setting, locations: true), class: 'btn btn-default') %>